generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
model Charge {
  id        String   @id @default(uuid())
  chargeId  String   @unique
  address   String   @unique
  amount    BigInt
  status    String   @default("PENDING") 
  privKey   String?  
  merchantid String
  merchant Merchant @relation(fields: [merchantid],references: [id])

 // Timing fields
  paidAt    DateTime?
  createdAt DateTime @default(now())
  payoutConfirmedAt DateTime?
  completedAt       DateTime?
  lastProcessedAt   DateTime?
  
  // webhook delivery state (per event)
  webhookAttempts   Int      @default(0)
  webhookLastStatus String?

   // Transaction tracking
  payoutTxId        String?   // Store the payout transaction ID
  failureReason     String?   // Store failure reason for debugging
  



}

model Merchant {
  id               String   @id @default(cuid())
  name             String
  email            String   @unique
  password         String 
  apiKey           String   @unique
  apiSecret        String   // show once on creation (store securely)
  webhookUrl       String?
  webhookSecret    String?  // HMAC secret (show once)
  payoutStxAddress String?  // merchant's receiving STX address

  charges          Charge[]

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
