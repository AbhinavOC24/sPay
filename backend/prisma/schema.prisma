generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
model Charge {
  id        String   @id @default(uuid())
  chargeId  String   @unique
  address   String   @unique
  amount    BigInt
  status    String   @default("PENDING") 
  privKey   String?  

  createdAt DateTime @default(now())
  paidAt    DateTime?


    // webhook fields
  webhookUrl     String?  // merchant callback url
  webhookSecret  String?  // HMAC secret to sign webhook payloads (store server-side)
  webhookAttempts Int     @default(0)
  webhookLastStatus String?
}